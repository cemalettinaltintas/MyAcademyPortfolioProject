@model MyPortfolio.Models.TblProjects
@{
    ViewBag.Title = "AddProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3>Yeni Proje Ekleme Sayfası</h3>

<form method="post">
    <label>Proje Adı</label>
    <input type="text" class="form-control" name="ProjectName" />
    <label>Resim</label>
    <input type="text" class="form-control" name="ImageUrl" />

    <label>Github Linki</label>
    <input type="text" class="form-control" name="GithubUrl" />

    <label>Kategori</label>
    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.category,"Kategoriyi Seçin",new {@class="form-control"})
    <br />
    <button class="btn btn-outline-primary">Kaydet</button>
</form>